<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_film_form" model="ir.ui.view">
    <field name="name">film.form</field>
    <field name="model">film</field>
    <field name="arch" type="xml">
        <form string="Film">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="release_date"/>
                    <field name="duration"/>
                    <field name="director_id"/>
                    <field name="location_id"/>
                    <field name="production_company_id"/>
                    <field name="film_type"/>
                    <field name="size"/>
                    <field name="price_sold"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_film_tree" model="ir.ui.view">
    <field name="name">film.tree</field>
    <field name="model">film</field>
    <field name="arch" type="xml">
        <tree string="Films">
            <field name="name"/>
            <field name="release_date"/>
            <field name="duration"/>
            <field name="director_id"/>
            <field name="location_id"/>
            <field name="production_company_id"/>
            <field name="price_sold"/>
        </tree>
    </field>
</record>
</odoo>
