<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_tournage_form" model="ir.ui.view">
        <field name="name">cinema.tournage.form</field>
        <field name="model">cinema.tournage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="numero_tournage"/>
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                        <field name="duree_tournage" readonly="1"/>
                        <field name="film_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tournage_tree" model="ir.ui.view">
        <field name="name">cinema.tournage.tree</field>
        <field name="model">cinema.tournage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="numero_tournage"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="duree_tournage"/>
                <field name="film_id"/>
            </tree>
        </field>
    </record>

    <record id="action_tournage" model="ir.actions.act_window">
        <field name="name">Tournages</field>
        <field name="res_model">cinema.tournage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cinema_root" name="CinÃ©ma"/>
    <menuitem id="menu_tournage" parent="menu_cinema_root" name="Tournages" action="action_tournage"/>
</odoo>
